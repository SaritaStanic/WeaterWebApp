	<!--  ---- JavaScript for Toggle Menu ---- -->
		<script>
			var navLinks=document.getElementById("navLinks")
			function showMenu(){
				navLinks.style.right="0"; //le leftmost dot up of the rectangle toughes the 0 of y axe

			}
			function hideMenu(){
				navLinks.style.right="-200px" // this just moves the rectangle on the side to the right
			}
		
		</script>

